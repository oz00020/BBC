<div class="tile">

<h1><%= @page.title %></h1>

<% if user_signed_in? %>
<% if @page.user_id == current_user.id %>

<ul><li><%= link_to "Edit", edit_page_path(@page) %></li></ul>
<ul><li><%= link_to "Delete", page_path(@page), method: :delete, data: {confirm: "Are you sure ?" } %></li></ul>

<% end %>
<% end %>

</div>
